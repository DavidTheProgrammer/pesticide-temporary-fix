{
  "manifest_version": 3,
  "name": "Pesticide for Chrome (Updated)",
  "version": "1.0.3",
  "description": "Updated Pesticide extension with Manifest V3",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "19": "images/toolbar-chrome.png",
      "38": "images/toolbar-chrome@2x.png"
    },
    "default_title": "Toggle Pesticide"
  },
  "icons": {
    "128": "icon_128.png",
    "16": "icon_16.png",
    "48": "icon_48.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["pesticide.min.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
